map J $lf -remote "send $id cd $(cut -d'	' -f2 ${XDG_CONFIG_HOME:-$HOME/.config}/directories | fzf)"
map B bulkrename
map yp yank-path
map C copyto
map p paste
map D delete
map yb yank-basename-without-extension
